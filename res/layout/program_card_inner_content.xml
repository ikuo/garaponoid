<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="@dimen/card_inner_content_height"
  android:layout_marginRight="5dp"
  android:layout_marginBottom="3dp"
>
  <!-- Description header -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="17dp"
    android:layout_marginTop="3dp"
    android:gravity="center_vertical|left"
  >
    <TextView
      android:id="@+id/program_datetime"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:textColor="@android:color/darker_gray"
      android:text="@string/unknown_datetime"
    />
    <FrameLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_weight="1"
    />
    <TextView
      android:id="@+id/program_channel"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:textColor="@color/branding_main"
      android:text="@string/unknown_channel"
    />
  </LinearLayout>

  <!-- Description content -->
  <TextView
    android:id="@+id/program_description"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="2dp"
    android:ellipsize="end"
    android:maxLines="4"
    android:scrollHorizontally="true"
    style="@android:style/TextAppearance.Small"
  />
</LinearLayout>
