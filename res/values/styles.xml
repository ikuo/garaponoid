<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="main_background">
    <item name="android:background">@color/main_background</item>
  </style>
  <style name="card.main_layout">
    <item name="android:background">@android:color/background_dark</item>
    <item name="android:layout_marginTop">@dimen/card_margin_top</item>
  </style>
  <style name="list_card.thumbnail">
    <item name="android:background">@drawable/card_frame_selector</item>
  </style>
  <style name="card.shadow_image">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/card_shadow_height</item>
    <item name="android:src">@drawable/card_shadow</item>
    <item name="android:layout_below">@+id/card_main_content_layout</item>
  </style>
</resources>